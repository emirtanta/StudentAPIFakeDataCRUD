@model List<Student>
@{
    ViewData["Title"] = "Öğrenci Listesi";
    int count = 0;
}

<h2 class="text-center">@ViewData["Title"]</h2>

@if (Model.Count < 0)
{
    <p class="text-center"><b>Kayıtlı veri bulunamadı</b></p>

    <br />

    <a asp-controller="Students" asp-action="Create" class="btn btn-primary">Öğrenci Ekle</a>
}

else
{

    <a asp-controller="Students" asp-action="Create" class="btn btn-primary">Öğrenci Ekle</a>
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>Öğrenci No</th>
                <th>Ad Soyad</th>
                <th>Sınıfı</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    @count++;
                    <td>@count</td>
                    <td>@item.Name @item.Surname</td>
                    <td>@item.StudentClass</td>
                    <td>
                        <a asp-controller="Students" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Güncelle</a> |
                        <a asp-controller="Students" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


