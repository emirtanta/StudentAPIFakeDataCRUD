@model Student
@{
    ViewData["Title"] = $"{Model.Name} {Model.Surname} silme sayfası";
}


<h3 class="text-center"><b>@Model.Name @Model.Surname</b> adlı veriyi silmek istediğinize emin misiniz?</h3>
<div class="text-center">
    <hr />

    <form asp-action="Delete">

        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">Sil</button> |
        <a asp-action="Index" class="btn btn-primary">Listeye Dön</a>
    </form>
</div>

